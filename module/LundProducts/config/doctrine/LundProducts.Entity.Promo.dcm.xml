<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="LundProducts\Entity\Promo" table="promos">
        <indexes>
            <index name="deleted" columns="deleted"/>
        </indexes>
        <id name="promoId" column="promo_id"  type="integer">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="createdAt" column="created_at" type="datetime" nullable="true"/>
        <field name="createdBy" column="created_by" type="string" length="255" nullable="true"/>
        <field name="modifiedAt" column="modified_at" type="datetime" nullable="true"/>
        <field name="modifiedBy" column="modified_by" type="string" length="255" nullable="true"/>
        <field name="deleted" type="boolean" nullable="true"/>
        <field name="disabled" type="boolean" nullable="true"/>
        <field name="customerNumber" column="customer_number" type="integer" nullable="true" default="0"/>
        <field name="startDate" column="start_date" type="datetime" nullable="true"/>
        <field name="endDate" column="end_date" type="datetime" nullable="true"/>
        <field name="promoDesc" column="promo_desc" type="string" length="255" nullable="true"/>
        <field name="promoCode" column="promo_code" type="string" length="255" nullable="true"/>
        <field name="promoNumber" column="promo_number" type="string" length="255" nullable="true"/>
        <field name="promoLine" column="promo_line" type="string" length="255" nullable="true"/>
        <field name="price" column="price" type="decimal" scale="2" precision="8" nullable="true" />
        <field name="percent" column="percent" type="string" length="255" nullable="true"/>
        <field name="promoPrice" column="promo_price" type="string" nullable="true" />
        <field name="promoOff" column="promo_off" type="string" nullable="true" />
        <field name="customerPromo" column="customer_promo" type="string" nullable="true" />
        <field name="itemClassPromo" column="item_class_promo" type="string" nullable="true" />
        <field name="itemPromo" column="item_promo" type="string" nullable="true" />
        <field name="description" column="description" type="text" nullable="true"/>
        <many-to-one field="parts" target-entity="LundProducts\Entity\Parts" fetch="EAGER">
            <join-column name="part_id" referenced-column-name="part_id"/>
        </many-to-one>
        <many-to-one field="productLine" target-entity="LundProducts\Entity\ProductLines" fetch="EAGER">
            <join-column name="product_line_id" referenced-column-name="product_line_id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
